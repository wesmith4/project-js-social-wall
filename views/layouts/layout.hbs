<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{#if title}}{{title}}{{else}}Chatbox Prime{{/if}}</title>
    <meta charset="UTF-8">

    <link rel="stylesheet" href="stylesheets/normalize.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <div id="page">
      <header id="page-header">
        <h1><strong>Chatbox Prime</strong></h1>
        <div id="auth-buttons">
          {{#if user}}
          <a class="auth-button" href="/sign-out"><button>Sign Out</button></a>
          {{else}}
          <a class="auth-button" href="/sign-up"><button>Sign Up</button></a>
          <a class="auth-button" href="/sign-in"><button>Sign In</button></a>
          {{/if}}
        </div>
      </header>

      <div id="page-content">
        {{{body}}}
      </div>
    </div>
  </body>
</html>
